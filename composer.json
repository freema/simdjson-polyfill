{
    "name": "tomasgrasl/simdjson-polyfill",
    "description": "ðŸš€ Automatic simdjson integration for PHP with multiple override strategies. Drop-in replacement for json_decode() with 3x performance boost. Symfony & Nette support included.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "json",
        "simdjson",
        "performance",
        "polyfill",
        "symfony",
        "nette"
    ],
    "authors": [
        {
            "name": "Tomas Grasl",
            "email": "tomas@grasl.cz"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5 || ^10.0",
        "symfony/framework-bundle": "^5.4 || ^6.0 || ^7.0",
        "symfony/yaml": "^5.4 || ^6.0 || ^7.0",
        "nette/di": "^3.0",
        "nikic/php-parser": "^4.15 || ^5.0",
        "phpbench/phpbench": "^1.2",
        "phpstan/phpstan": "^1.10"
    },
    "suggest": {
        "ext-simdjson": "For 3x faster JSON parsing performance",
        "ext-uopz": "For global json_decode() override via UopzStrategy"
    },
    "autoload": {
        "psr-4": {
            "SimdJsonPolyfill\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SimdJsonPolyfill\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
